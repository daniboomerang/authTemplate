<div class="container">  
  <div class="row sub-main-container">
    <div class="col-xs-6 col-md-4 col-md-offset-4 form-container border-container-blue">     
      <div class="form-signing">
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <div><%= f.email_field :email, :autofocus => true, :class => 'form-control', :placeholder => 'Email Address'%></div>
          <p>
          <div><%= f.password_field :password, :type => 'password', :class => 'form-control', :placeholder => 'Password' %></div>

          <% if devise_mapping.rememberable? -%>
            <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
          <% end -%>

          <div><%= f.submit "Sign in", :class => 'btn btn-lg btn-custom-darkblue btn-block', :type => 'submit' %></div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>





