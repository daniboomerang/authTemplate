<div class="container">  
  	<div class="row sub-main-container">
   		<div class="col-xs-6 col-md-4 col-md-offset-4 form-container border-container-blue">     
    		<div class="form-signing">
				Confirmation instructions
		 		<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
		  		<%= devise_error_messages! %>
				<div><%= f.email_field :email, :autofocus => true, :class => 'form-control', :placeholder => 'Email Address'%></div>
				<p>
		  		<div><%= f.submit "Resend", :class => 'btn btn-lg btn-custom-darkblue btn-block', :type => 'submit' %></div>
				<% end %>
		        <%= render "devise/shared/links" %>
			</div>
		</div>
	</div>	
</div>


