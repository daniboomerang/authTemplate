<div class="container">  
	<div class="row sub-main-container">
    	<div class="col-xs-6 col-md-4 col-md-offset-4 form-container border-container-blue">   
			<div class="form-signing">
			    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
				<%= devise_error_messages! %>
			    <%= f.email_field :email, :autofocus => true, :type => 'text', :class => 'form-control', :placeholder => 'Email Address' %>
			    <p></p>
			    <%= f.password_field :password, :type => 'password', :class => 'form-control', :placeholder => 'Password'%>
			    <%= f.password_field :password_confirmation, :type => 'password', :class => 'form-control', :placeholder => 'Repeat password' %>
			    <div><%= f.submit "Sign up", :class => 'btn btn-lg btn-custom-darkblue btn-block', :type => 'submit' %></div>
				<% end %>
				<%= render "devise/shared/links" %>				
			</div>
		</div>
	</div>			
</div>
